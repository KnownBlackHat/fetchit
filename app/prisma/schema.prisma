generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum Gender {
    Male
    Female
}

model User {
    id       String  @id @default(cuid())
    username String  @unique
    fullname String
    img_url  String?
    password String
    phone_no BigInt
    mail_id  String
    gender   Gender

    userAddress   UserAddress[]
    ordersHistory UserOrdersHistory[]
    ordersActive  UserActiveOrder[]
}

model Admin {
    id       String @id @default(cuid())
    username String @unique
    password String
    phone_no BigInt
}

enum Category {
    Canteen
    Den
    Ration
    Essential
    Resturant
}

model Shop {
    id           String   @id @default(cuid())
    username     String   @unique
    password     String
    shop_name    String
    address      String
    rating       Float    @default(0.0)
    rating_count BigInt   @default(0)
    phone_no     BigInt
    img_url      String
    category     Category
    active       Boolean  @default(true)

    total_seat     Int?
    available_seat Int?

    total_revenue   BigInt @default(0)
    commission      BigInt @default(0)
    avg_order_value BigInt @default(0)

    inventory     Inventory[]
    ordersHistory VendorOrderHistory[]
    ordersActive  VendorActiveOrder[]
}

model Delivery {
    id       String @id @default(cuid())
    username String @unique
    password String
    phone_no BigInt
    img_url  String
}

model Inventory {
    id           String @id @default(cuid())
    name         String @unique
    price        Float
    rating       Float  @default(0.0)
    rating_count BigInt @default(0)
    img_url      String
    count        Int

    shopId String
    shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)
}

model UserAddress {
    id          String @id @default(cuid())
    line1       String
    line2       String
    landmark    String
    city        String
    postal_code Int

    userId String @unique
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserOrdersHistory {
    id       String   @id @default(cuid())
    name     String
    price    Float
    img_url  String
    count    Int
    category Category

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
}

model UserActiveOrder {
    id       String   @id @default(cuid())
    name     String
    price    Float
    img_url  String
    count    Int
    category Category
    user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId   String?
}

model VendorOrderHistory {
    id      String  @id @default(cuid())
    name    String
    price   Float
    img_url String
    count   Int
    shop    Shop?   @relation(fields: [shopId], references: [id], onDelete: Cascade)
    shopId  String?
}

model VendorActiveOrder {
    id      String  @id @default(cuid())
    name    String
    price   Float
    img_url String
    count   Int
    shop    Shop?   @relation(fields: [shopId], references: [id], onDelete: Cascade)
    shopId  String?
}

model OrderIntermidates {
    id       String  @id @default(cuid())
    accepted Boolean
}
